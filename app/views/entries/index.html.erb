<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Best picture</th>
      <th>Actor leading</th>
      <th>Actress leading</th>
      <th>Actor supporting</th>
      <th>Actress supporting</th>
      <th>Animated film</th>
      <th>Cinematography</th>
      <th>Costume design</th>
      <th>Director</th>
      <th>Documentary</th>
      <th>Documentary short</th>
      <th>Film editing</th>
      <th>Foreign film</th>
      <th>Makeup hair</th>
      <th>Original score</th>
      <th>Original song</th>
      <th>Production design</th>
      <th>Animated short film</th>
      <th>Short film</th>
      <th>Sound editing</th>
      <th>Sound mixing</th>
      <th>Visual effects</th>
      <th>Adapted screenplay</th>
      <th>Original screenplay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.Name %></td>
        <td><%= entry.Best_Picture %></td>
        <td><%= entry.Actor_Leading %></td>
        <td><%= entry.Actress_Leading %></td>
        <td><%= entry.Actor_Supporting %></td>
        <td><%= entry.Actress_Supporting %></td>
        <td><%= entry.Animated_Film %></td>
        <td><%= entry.Cinematography %></td>
        <td><%= entry.Costume_Design %></td>
        <td><%= entry.Director %></td>
        <td><%= entry.Documentary %></td>
        <td><%= entry.Documentary_Short %></td>
        <td><%= entry.Film_Editing %></td>
        <td><%= entry.Foreign_Film %></td>
        <td><%= entry.Makeup_Hair %></td>
        <td><%= entry.Original_Score %></td>
        <td><%= entry.Original_Song %></td>
        <td><%= entry.Production_Design %></td>
        <td><%= entry.Animated_Short_Film %></td>
        <td><%= entry.Short_Film %></td>
        <td><%= entry.Sound_Editing %></td>
        <td><%= entry.Sound_Mixing %></td>
        <td><%= entry.Visual_Effects %></td>
        <td><%= entry.Adapted_Screenplay %></td>
        <td><%= entry.Original_Screenplay %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path, :class => "button" %>
