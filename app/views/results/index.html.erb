<h1>Results</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Best picture</th>
      <th>Actor leading</th>
      <th>Actress leading</th>
      <th>Actor supporting</th>
      <th>Actress supporting</th>
      <th>Animated film</th>
      <th>Cinematography</th>
      <th>Costume design</th>
      <th>Director</th>
      <th>Documentary</th>
      <th>Documentary short</th>
      <th>Film editing</th>
      <th>Foreign film</th>
      <th>Makeup hair</th>
      <th>Original score</th>
      <th>Original song</th>
      <th>Production design</th>
      <th>Animated short film</th>
      <th>Short film</th>
      <th>Sound editing</th>
      <th>Sound mixing</th>
      <th>Visual effects</th>
      <th>Adapted screenplay</th>
      <th>Original screenplay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.Name %></td>
        <td><%= result.Best_Picture %></td>
        <td><%= result.Actor_Leading %></td>
        <td><%= result.Actress_Leading %></td>
        <td><%= result.Actor_Supporting %></td>
        <td><%= result.Actress_Supporting %></td>
        <td><%= result.Animated_Film %></td>
        <td><%= result.Cinematography %></td>
        <td><%= result.Costume_Design %></td>
        <td><%= result.Director %></td>
        <td><%= result.Documentary %></td>
        <td><%= result.Documentary_Short %></td>
        <td><%= result.Film_Editing %></td>
        <td><%= result.Foreign_Film %></td>
        <td><%= result.Makeup_Hair %></td>
        <td><%= result.Original_Score %></td>
        <td><%= result.Original_Song %></td>
        <td><%= result.Production_Design %></td>
        <td><%= result.Animated_Short_Film %></td>
        <td><%= result.Short_Film %></td>
        <td><%= result.Sound_Editing %></td>
        <td><%= result.Sound_Mixing %></td>
        <td><%= result.Visual_Effects %></td>
        <td><%= result.Adapted_Screenplay %></td>
        <td><%= result.Original_Screenplay %></td>
        <td><%= link_to 'Show', result %></td>
        <td><%= link_to 'Edit', edit_result_path(result) %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

