<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Createdby</th>
      <th>players</th>
      <th>private?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.GameName %></td>
        <td><%= game.CreatedBy %></td>
        <td><%= game.Numberofplayers %></td>
        <td><%= game.PublicorPrivate %></td>
        <td><%= link_to 'Join', game %></td> 
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

